{
  "manifest_version": 2,
  "name": "YTB",
  "description": "Watch YouTube playlists and channel archives in order",
  "version": "1.0",

  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "YTB"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}